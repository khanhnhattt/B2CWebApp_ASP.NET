<h1 class="text-center">Orders</h1>
<section class="vh-100 px-5">
    <div class="container h-100">
        <div class="row d-flex justify-content-center h-100">
            <div class="col-12">
                @if (ViewBag.orders != null)
                {
                    @foreach (var order in ViewBag.orders)
                    {

                        <div class="card card-stepper text-black mb-3" style="border-radius: 16px; background-color: #ddd; color: rgb(65, 65, 65);">

                            <div class="card-body p-5">

                                <div class="d-flex justify-content-between align-items-center mb-5">
                                    <div>
                                        <p class="mb-0">INVOICE <strong class="">@order.InvoiceNumber</strong></p>
                                    </div>
                                    <div class="text-end">
                                        <p class="mb-0">Order Time <span>@order.OrderTime</span></p>
                                        @*<p class="mb-0">USPS <span class="font-weight-bold">234094567242423422898</span></p>*@
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-0">ORDER STATUS <strong class="text">@order.OrderStatus</strong></p>
                                    </div>
                                    <div class="text-end">
                                        <a class="btn" asp-controller="Cart" asp-action="ViewOrderDetail" asp-route-id="@order.Id">View Details</a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    }
                }
                else
                {
                    <h4 class="text-center m-4">No order yet!</h4>
                }
            </div>
        </div>
    </div>
</section>

<style>
/*    .card-stepper {
        z-index: 0
    }*/
    .btn {
        background-color: #000;
        border-color: #000;
        color: white;
        width: 100%;
        font-size: 0.7rem;
        margin-top: 4vh;
        padding: 1vh;
        border-radius: 0;
    }

    .btn:focus {
        box-shadow: none;
        outline: none;
        box-shadow: none;
        color: white;
        -webkit-box-shadow: none;
        -webkit-user-select: none;
        transition: none;
    }

    .btn:hover {
        color: white;
    }

    a {
        color: black;
    }

    a:hover {
        color: black;
        text-decoration: none;
    }
</style>