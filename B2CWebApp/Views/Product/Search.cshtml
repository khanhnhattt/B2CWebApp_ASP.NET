@model IEnumerable<B2CWebApp.Models.ViewModel.ProductsViewModel>

@{
    ViewData["Title"] = "Search";
}

<h1>Search for @ViewBag.search</h1>

@if (ViewBag.msg == null)
{
    <div class="products-wrapper">
        <div class="product-grid">
            <div class="item-grid row d-flex justify-content-between">
                @foreach (var item in ViewBag.products)
                {
                    <a class="text-decoration-none col-md-3 text-center card mb-2" style="color:black" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                        <img class="img-fluid" src="@item.ImgPath" alt="product image" style="width:250px; height:250px; padding:1rem" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">$@item.Price</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
}

<p>@ViewBag.msg</p>
